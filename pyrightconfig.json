{
  "include": [
    "**/*.py" 
  ],
  "exclude": [
    "**/node_modules", 
    "**/__pycache__",
    "**/.git",
    "**/.venv",
    "**/venv",
    "**/.conda",
    "**/.mypy_cache"
  ],
  "extraPaths": [
    "./" 
  ],
  "reportMissingImports": true // Essential: Pyright will warn if it can't find an imported module
}
